<div class="container p-4">
  <div class="row">
    <div class="cold-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/add" method="POST">

            <div class="form-group">
              <input type="text" name="title" id="" placeholder="Title" autofocus class="form-control">
            </div>

            <div class="form-group">
              <input type="url" name="url" id="" placeholder="URL" class="form-control">
            </div>

            <div class="form-group">
              <textarea name="description" id="" rows="1" class="form-control" placeholder="description"></textarea>
            </div>

            <div class="form-group">
              <button class="btn btn-success btn-block">Save</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>